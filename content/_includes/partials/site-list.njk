<ul>
    {% for group in sites.list | group_by_date | reverse %}
    <li>
        <h3 class="text-xl font-bold">{{ group.year }}</h3>
        <ul>
            {% for site in group.sites | sort_sites_by_date %}
            <li>{{ site.title }}</li>
            {% endfor %}
        </ul>
    </li>
    {% endfor %}
</ul>